<%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-bg"></div>
        <div class="container hero-content">
            <div class="hero-text">
                <div class="hero-badge">
                    <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                    <%= settings.siteTagline || 'İT Həllər Tərəfdaşınız' %>
                </div>
                <h1><%= settings.heroTitle || 'İT infrastrukturunuzu bizimlə gücləndirin' %></h1>
                <p><%= settings.heroSubtitle || '' %></p>
                <div class="hero-actions">
                    <a href="/elaqe" class="btn btn-primary">Bizimlə Əlaqə</a>
                    <a href="/xidmetler" class="btn btn-outline">Xidmətlərimiz</a>
                </div>
            </div>
            <div class="hero-visual">
                <div class="hero-visual-inner">
                    <svg viewBox="0 0 100 100" class="hero-logo-icon">
                        <circle cx="50" cy="50" r="35" fill="none" stroke="#0f172a" stroke-width="6" stroke-dasharray="160 220" stroke-linecap="round" style="transform: rotate(-10deg); transform-origin: 50% 50%;" />
                        <circle cx="50" cy="50" r="12" fill="#3b82f6" />
                        <line x1="68" y1="68" x2="90" y2="90" stroke="#3b82f6" stroke-width="10" stroke-linecap="round" />
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats -->
    <% if (settings.heroStats && settings.heroStats.length) { %>
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                <% settings.heroStats.forEach(function(stat) { %>
                <div class="stat-item">
                    <span class="stat-number"><%= stat.number %></span>
                    <span class="stat-label"><%= stat.label %></span>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- About -->
    <section class="section">
        <div class="container">
            <div class="about-grid">
                <div class="about-content">
                    <span class="section-badge">Haqqımızda</span>
                    <h2 class="section-title">Niyə <span class="text-blue">Quantor</span>?</h2>
                    <p class="about-text"><%= settings.aboutText || '' %></p>
                    <div class="about-features">
                        <div class="about-feature">
                            <div class="about-feature-icon">
                                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                            </div>
                            <div>
                                <strong>Sertifikatlı Mütəxəssislər</strong>
                                <p>Peşəkar və təcrübəli İT komandası</p>
                            </div>
                        </div>
                        <div class="about-feature">
                            <div class="about-feature-icon">
                                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                            </div>
                            <div>
                                <strong>7/24 Dəstək</strong>
                                <p>Fasiləsiz texniki dəstək xidməti</p>
                            </div>
                        </div>
                        <div class="about-feature">
                            <div class="about-feature-icon">
                                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                            </div>
                            <div>
                                <strong>Etibarlı Həllər</strong>
                                <p>Dünya standartlarına uyğun infrastruktur</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="about-visual">
                    <div class="about-card">
                        <div class="about-card-icon">
                            <svg width="48" height="48" fill="none" stroke="#3b82f6" stroke-width="1.5" viewBox="0 0 24 24"><path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
                        </div>
                        <h3>Tam İT Həlləri</h3>
                        <p>Bir çatı altında bütün İT ehtiyaclarınız</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Preview -->
    <section class="section section-gray">
        <div class="container">
            <div class="section-header">
                <span class="section-badge">Xidmətlərimiz</span>
                <h2 class="section-title">Təklif etdiyimiz <span class="text-blue">həllər</span></h2>
                <p class="section-subtitle">Şirkətinizin İT ehtiyaclarını ən müasir texnologiyalarla qarşılayırıq</p>
            </div>
            <div class="services-grid">
                <% services.forEach(function(service) { %>
                <div class="service-card">
                    <div class="service-icon">
                        <%- include('../partials/service-icon', { icon: service.icon }) %>
                    </div>
                    <h3><%= service.title %></h3>
                    <p><%= service.shortDesc %></p>
                </div>
                <% }); %>
            </div>
            <div class="section-cta">
                <a href="/xidmetler" class="btn btn-primary">Bütün Xidmətlər</a>
            </div>
        </div>
    </section>

    <!-- Partners Preview -->
    <% if (partners.length) { %>
    <section class="section">
        <div class="container">
            <div class="section-header">
                <span class="section-badge">Tərəfdaşlarımız</span>
                <h2 class="section-title">Etibarlı <span class="text-blue">tərəfdaşlar</span></h2>
                <p class="section-subtitle">Dünya liderləri ilə əməkdaşlıq edərək ən yaxşı həlləri təklif edirik</p>
            </div>
            <div class="partners-marquee">
                <div class="partners-track">
                    <% partners.forEach(function(partner) { %>
                    <div class="partner-item">
                        <% if (partner.logo) { %>
                            <img src="<%= partner.logo %>" alt="<%= partner.name %>">
                        <% } else { %>
                            <span class="partner-name"><%= partner.name %></span>
                        <% } %>
                    </div>
                    <% }); %>
                    <% partners.forEach(function(partner) { %>
                    <div class="partner-item">
                        <% if (partner.logo) { %>
                            <img src="<%= partner.logo %>" alt="<%= partner.name %>">
                        <% } else { %>
                            <span class="partner-name"><%= partner.name %></span>
                        <% } %>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>
    <% } %>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Layihənizi müzakirə edək</h2>
                <p>İT infrastrukturunuzu yüksəltmək üçün bizimlə əlaqə saxlayın. Pulsuz konsultasiya təklif edirik.</p>
                <a href="/elaqe" class="btn btn-white">Əlaqə Saxlayın</a>
            </div>
        </div>
    </section>

<%- include('../partials/footer') %>
