<%- include('../partials/header') %>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <span class="section-badge">Tərəfdaşlarımız</span>
            <h1>Texnoloji <span class="text-blue">Tərəfdaşlarımız</span></h1>
            <p>Dünya lider şirkətləri ilə rəsmi tərəfdaşlıq münasibətlərimiz sayəsində ən yaxşı həlləri təklif edirik</p>
        </div>
    </section>

    <!-- Partners Grid -->
    <section class="section">
        <div class="container">
            <div class="partners-grid">
                <% partners.forEach(function(partner) { %>
                <div class="partner-card">
                    <div class="partner-card-logo">
                        <% if (partner.logo) { %>
                            <img src="<%= partner.logo %>" alt="<%= partner.name %>">
                        <% } else { %>
                            <span class="partner-card-name"><%= partner.name %></span>
                        <% } %>
                    </div>
                    <div class="partner-card-info">
                        <h3><%= partner.name %></h3>
                        <p><%= partner.description %></p>
                        <% if (partner.website) { %>
                        <a href="<%= partner.website %>" target="_blank" rel="noopener" class="partner-link">
                            Sayta keçid
                            <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/></svg>
                        </a>
                        <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Become Partner -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Tərəfdaş olmaq istəyirsiniz?</h2>
                <p>Texnologiya sahəsində fəaliyyət göstərən şirkətlərlə yeni tərəfdaşlıq imkanlarını araşdırırıq.</p>
                <a href="/elaqe" class="btn btn-white">Əlaqə Saxlayın</a>
            </div>
        </div>
    </section>

<%- include('../partials/footer') %>
