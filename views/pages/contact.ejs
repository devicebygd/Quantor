<%- include('../partials/header') %>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <span class="section-badge">Əlaqə</span>
            <h1>Bizimlə <span class="text-blue">Əlaqə</span></h1>
            <p>Layihəniz haqqında danışmaq və ya suallarınızı cavablandırmaq üçün buradayıq</p>
        </div>
    </section>

    <!-- Contact -->
    <section class="section">
        <div class="container">
            <!-- Flash Messages -->
            <% if (flash.success && flash.success.length) { %>
            <div class="alert alert-success">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <%= flash.success[0] %>
            </div>
            <% } %>
            <% if (flash.error && flash.error.length) { %>
            <div class="alert alert-error">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <%= flash.error[0] %>
            </div>
            <% } %>

            <div class="contact-grid">
                <div class="contact-form-wrapper">
                    <h2>Mesaj Göndərin</h2>
                    <p>Formu doldurun, ən qısa zamanda sizinlə əlaqə saxlayacağıq.</p>
                    <form action="/elaqe" method="POST" class="contact-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Ad, Soyad *</label>
                                <input type="text" id="name" name="name" required placeholder="Adınız">
                            </div>
                            <div class="form-group">
                                <label for="email">E-poçt *</label>
                                <input type="email" id="email" name="email" required placeholder="email@misal.az">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="tel" id="phone" name="phone" placeholder="+994 XX XXX XX XX">
                            </div>
                            <div class="form-group">
                                <label for="subject">Mövzu</label>
                                <input type="text" id="subject" name="subject" placeholder="Mövzu">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="message">Mesaj *</label>
                            <textarea id="message" name="message" rows="5" required placeholder="Mesajınızı yazın..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Göndər
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
                        </button>
                    </form>
                </div>
                <div class="contact-info-wrapper">
                    <div class="contact-info-card">
                        <h3>Əlaqə Məlumatları</h3>
                        <div class="contact-info-items">
                            <% if (settings.phone) { %>
                            <div class="contact-info-item">
                                <div class="contact-info-icon">
                                    <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg>
                                </div>
                                <div>
                                    <strong>Telefon</strong>
                                    <p><%= settings.phone %></p>
                                </div>
                            </div>
                            <% } %>
                            <% if (settings.email) { %>
                            <div class="contact-info-item">
                                <div class="contact-info-icon">
                                    <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                                </div>
                                <div>
                                    <strong>E-poçt</strong>
                                    <p><%= settings.email %></p>
                                </div>
                            </div>
                            <% } %>
                            <% if (settings.address) { %>
                            <div class="contact-info-item">
                                <div class="contact-info-icon">
                                    <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/><circle cx="12" cy="10" r="3"/></svg>
                                </div>
                                <div>
                                    <strong>Ünvan</strong>
                                    <p><%= settings.address %></p>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="contact-info-card">
                        <h3>İş Saatları</h3>
                        <div class="work-hours">
                            <div class="work-hours-row">
                                <span>Bazar ertəsi - Cümə</span>
                                <span>09:00 - 18:00</span>
                            </div>
                            <div class="work-hours-row">
                                <span>Şənbə</span>
                                <span>10:00 - 15:00</span>
                            </div>
                            <div class="work-hours-row">
                                <span>Bazar</span>
                                <span>Bağlı</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- include('../partials/footer') %>
